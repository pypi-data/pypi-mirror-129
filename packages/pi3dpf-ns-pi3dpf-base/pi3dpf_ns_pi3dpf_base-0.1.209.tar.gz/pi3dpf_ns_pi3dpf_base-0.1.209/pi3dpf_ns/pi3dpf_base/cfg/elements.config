[clock]
description        : «clock» is used to display the current time in the format given in property PIC_CLOCK_DTFORMAT
display            : on
pypi_package       : pi3dpf_ns.pi3dpf_base
pypi_pkg_prop_file : cfg/pf.config
formatting_spec    : property:%(PIC_CLOCK_DTFORMAT)s
data_source_spec   : exec:import time; rv=time.strftime('%(formatting_eval)s')
kind               : plain-text
font_color         : white ; use black or white
pos_x_spec         :  DISPLAY.width  // 2 - IMAGE.width // 2 - 80
pos_y_spec         : -DISPLAY.height // 2 + 300
refresh_rate_sec   : 60
pos_debug          : True

[pic_fname]
description        : «pic_fname» is used to display the current pictures file name on the screen. Default values may be superseded by directory specific .pf-opts.
display            : on
pypi_package       : pi3dpf_ns.pi3dpf_base
pypi_pkg_prop_file : cfg/pf.config
data_source_spec   : global_var:from __main__ import pf_current_filename as x; import os; gv=os.path.basename(x)
formatting_spec    : as-is
kind               : plain-text
font_color         : white ; use black or white
pos_x_spec         :  DISPLAY.width  // 2 - IMAGE.width // 2 - 80
pos_y_spec         : -DISPLAY.height // 2 + 300
refresh_rate_sec   : 5
pos_debug          : False

[pic_dname]
description        : «pic_dname» is used to display a more constant text (e.g. the current directory name) on the picture frame. Default values may be superseded by directory specific .pf-opts.
display            : on
pypi_package       : pi3dpf_ns.pi3dpf_base
pypi_pkg_prop_file : cfg/pf.config
data_source_spec   : global_var:from __main__ import pf_current_filename as x; import os; gv=os.path.dirname(x)
formatting_spec    : as-is
kind               : plain-text
font_color         : white ; use black or white
pos_x_spec         :  DISPLAY.width  // 2 - IMAGE.width // 2 - 80
pos_y_spec         : -DISPLAY.height // 2 + 300
refresh_rate_sec   : 5
pos_debug          : False




