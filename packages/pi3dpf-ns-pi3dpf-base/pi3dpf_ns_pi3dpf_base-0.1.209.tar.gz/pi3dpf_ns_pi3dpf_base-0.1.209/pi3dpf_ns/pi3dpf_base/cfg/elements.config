[owm_graph_5d3h]
description        : «owm_5d3h_graph» will display graphical weather forcast from OWM over 5 days in 3h intervals
display            : on
pypi_package       : pi3dpf_ns.pi3dpf_owm
pypi_pkg_prop_file : owm_org/cfg/wm.config
data_source_spec   : property:%(OWM_DATA_DIR)s/%(OWM_5D3H_LIBREOFFICE_BITMAP_OUT)s
formatting_spec    : as-is
kind               : pi3d-texture
pos_x_spec         :  DISPLAY.width  // 2 - IMAGE.width  // 2 - 20
pos_y_spec         : -DISPLAY.height // 2 + IMAGE.height // 2 + 150
refresh_rate_sec   : 360
pos_debug          : False

[owm_graph_now]
description        : «owm_now_graph» is used to display temperature and the weather symbol of the current weather
display            : off
pypi_package       : pi3dpf_ns.pi3dpf_owm
pypi_pkg_prop_file : owm_org/cfg/wm.config
data_source_spec   : property:%(OWM_DATA_DIR)s/%(OWM_NOW_LIBREOFFICE_BITMAP_OUT)s
formatting_spec    : as-is
kind               : pi3d-texture
pos_x_spec         :  DISPLAY.width  // 2 - IMAGE.width  // 2 - 20
pos_y_spec         : -DISPLAY.height // 2 + IMAGE.height // 2 + 150
refresh_rate_sec   : 360
pos_debug          : False

[owm_details_now]
description        : «owm_now_details» is used to display the all weather details given cities in a scrolling text window
display            : on
pypi_package       : pi3dpf_ns.pi3dpf_owm
pypi_pkg_prop_file : owm_org/cfg/wm.config
data_source_spec   : property:%(OWM_DATA_DIR)s/muss_ich_noch_einen_parameter_bestimmen
formatting_spec    : as-is
kind               : plain-text
font_color         : white ; use black or white
pos_x_spec         : -893
pos_y_spec         : int(-DISPLAY.height//2+30)
refresh_rate_sec   : 360
pos_debug          : False

[worldclock_ch_th]
# Examples:
#  -1-
#  '07:45 2564-11-18' Local Time (e.g. CET) with Thai year-month-day
#   thai_strftime(datetime.datetime.today(), '%H:%M %Y-%m-%d')
#  -2-
#  Local Time (CET) + Time in Thailand
#  -3-
#  Local Time (TH) + Time in different time zone
#
description        : «worldclock_ch_th» is used to display Swiss and Thai time with B.A year, month and day
display            : off
pypi_package       : pi3dpf_ns.pi3dpf_base
pypi_pkg_prop_file : cfg/pf.config
