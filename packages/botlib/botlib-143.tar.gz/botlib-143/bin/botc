#!/usr/bin/env python3
# This file is placed in the Public Domain.


"24/7 channel daemon"


import os
import readline
import sys
import termios
import threading
import time


from bot.clt import Client
from bot.irc import Cfg as IRC
from bot.obj import Cfg
from bot.ofn import fmt
from bot.run import Runtime
from bot.run import Cfg as RunCfg
from bot.tbl import Table
from bot.utl import spl
from bot.ver import __version__


Cfg.wd = "/var/lib/botd/"


class Kernel(Runtime):

    @staticmethod
    def error(txt):
        Kernel.log(txt)

    @staticmethod
    def log(txt):
        if not txt:
            return
        print(txt)
        sys.stdout.flush()


k = Kernel()


class CLI(Client):

    def handle(self, clt, e):
        k.put(e)
        e.wait()

    def raw(self, txt):
        print(txt)
        sys.stdout.flush()


c = CLI()


import bot.all


def wrap(func):
    try:
        func()
    except KeyboardInterrupt:
        print("")
    except PermissionError as ex:
        print("you need root privileges")


def main(): 
    k.cfg.name = "botc"
    k.cfg.version = __version__
    k.parse_cli()
    if not k.prs.txt:
        return
    if k.privileges("botd", "botd"):
       k.add(c)
       k.cmd(c, k.prs.otxt)


wrap(main)
